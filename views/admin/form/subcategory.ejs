
<%- include('../header') %>

<!-- Form Start -->
<div class="container-fluid pt-4 px-4">
    <div class="col-sm-12 col-xl-6">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Subcategory Form</h6>

        <form method="post" action="/subcategory/subCatdata">

            <div class="mb-3">
              <label for="inputUserName">Enter Category</label>
              <select class="form-control mt-2" name="categoryId">
                <option value="">--select category--</option>
                <% for(var cat of catData){ %>
                  <option value="<%= cat.id %>"><%= cat.categoryName %></option>
                <% } %>
              </select>
              <p style="color: red;"><%=(typeof errors!='undefined' && typeof errors.categoryId!='undefined' )? errors.categoryId.msg:''%></p>
            </div>
            <div class="mb-3">
              <label class="form-label">Enter SubCategory Name</label>
              <input type="text" name="subcategoryName" class="form-control">
              <p style="color: red;"><%=(typeof errors!='undefined' && typeof errors.subcategoryName!='undefined' )? errors.subcategoryName.msg:''%></p>
            </div>

          <input type="submit" class="btn-primary" value="Add Subcategory">

        </form>

    </div>
    </div>
</div>

<%- include('../footer') %>