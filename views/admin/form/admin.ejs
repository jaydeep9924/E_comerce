
<%- include('../header') %>

<!-- Form Start -->
<div class="container-fluid pt-4 px-4">
    <div class="col-sm-12 col-xl-6">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Admin Form</h6>

        <form method="post" action="/getadminData" enctype="multipart/form-data">

            <div class="mb-3">
                <label class="form-label">Enter Name</label>
                <input type="text" name="name" class="form-control">
                <p style="color: red;"><%=(typeof errors!='undefined' && typeof errors.name!='undefined' )? errors.name.msg:''%></p>
            </div>
            <div class="mb-3">
                <label class="form-label">Enter Email</label>
                <input type="email" name="email" class="form-control">
                <p style="color: red;"><%=(typeof errors!='undefined' && typeof errors.email!='undefined' )? errors.email.msg:''%></p>
            </div>
            <div class="mb-3">
                <label class="form-label">Password</label>
                <input type="password" name="password" class="form-control">
                <p style="color: red;"><%=(typeof errors!='undefined' && typeof errors.password!='undefined' )? errors.password.msg:''%></p>
            </div>
            <div class="mb-3">
                <label class="form-label">Select Gender</label>
                <div class="col-sm-10">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="gender"
                           value="male" >
                        <label class="form-check-label">
                            Male
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="gender"
                           value="female">
                        <label class="form-check-label">
                            Female
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="gender"
                           value="others">
                        <label class="form-check-label">
                            Others
                        </label>
                    </div>
                </div>
                <p style="color: red;"><%=(typeof errors!='undefined' && typeof errors.gender!='undefined' )? errors.gender.msg:''%></p>
            </div>
            <div class="mb-3">
                <label class="form-label">Select Hobbies</label> <br>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="hobby" value="Cricket">
                    <label class="form-check-label">Cricket</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="hobby" value="Reading">
                    <label class="form-check-label">Reading</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="hobby" value="Travelling">
                    <label class="form-check-label">Travelling</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="hobby" value="Gamning">
                    <label class="form-check-label">Gamning</label>
                </div>
                <p style="color: red;"><%=(typeof errors!='undefined' && typeof errors.hobby!='undefined' )? errors.hobby.msg:''%></p>
            </div>
            <div class="mb-3">
                <div class="bg-light rounded h-100">
                    <% var city=['Surat','Ahemdabad','Vapi','Rajkot','Gandinagar'] %>
                    <select class="form-select mb-3" name="city">
                        <option value="">Open this select City</option>
                        <% for(var i=0; i<city.length; i++){ %>
                            <option value="<%= city[i] %>"><%= city[i] %></option>
                        <% } %>
                    </select>
                </div>
                <p style="color: red;"><%=(typeof errors!='undefined' && typeof errors.city!='undefined' )? errors.city.msg:''%></p>
            </div>
            <div class="mb-3">
                <label class="form-label">Enter Description</label> <br>
                <textarea name="desc" cols="30" rows="2"></textarea>
                <p style="color: red;"><%=(typeof errors!='undefined' && typeof errors.desc!='undefined' )? errors.desc.msg:''%></p>
            </div>
            <div class="mb-3">
                <input type="file" name="admin_img">
                <p style="color: red;"><%=(typeof errors!='undefined' && typeof errors.admin_img!='undefined' )? errors.admin_img.msg:''%></p>
            </div>

            <input type="submit" class=" btn-primary" value="Sign in">

        </form>

    </div>
    </div>
</div>

<%- include('../footer') %>