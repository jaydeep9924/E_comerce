

<%- include('../header') %>

<!-- Form Start -->
<div class="container-fluid pt-4 px-4">
    <div class="col-sm-12 col-xl-6">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">ExtraCategory Form</h6>

        <form method="post" action="/extracategory/getextracategory">

            <div class="mb-3">
              <label for="inputUserName">Enter Category</label>
              <select class="form-control mt-2" name="categoryId" id="categoryId" onchange="getSubcategoryData()">
                <option value="">--select category--</option>
                  <% for(var cat of catdata){ %>
                    <option value="<%= cat.id %>"><%= cat.categoryName %></option>
                  <% } %>
              </select>
              <p style="color: red;"><%=(typeof errors!='undefined' && typeof errors.categoryId!='undefined' )? errors.categoryId.msg:''%></p>
            </div>

            <div class="mb-3">
              <label for="inputUserName">Enter Category</label>
              <select class="form-control mt-2" name="subcategoryId" id="subcategoryId">
                <option value="">--select Subcategory--</option>
              </select>
              <p style="color: red;"><%=(typeof errors!='undefined' && typeof errors.subcategoryId!='undefined' )? errors.subcategoryId.msg:''%></p>
            </div>

            <div class="mb-3">
              <label class="form-label">Enter ExtraCategory Name</label>
              <input type="text" name="extracategoryName" class="form-control">
              <p style="color: red;"><%=(typeof errors!='undefined' && typeof errors.extracategoryName!='undefined' )? errors.extracategoryName.msg:''%></p>
          </div>

            <input type="submit" class="btn-primary" value="Add ExtraCategory">

        </form>

    </div>
    </div>
</div>

<%- include('../footer') %>